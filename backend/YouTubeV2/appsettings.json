{
  "ConnectionStrings": {
    "Db": "Server=localhost;Integrated Security = true;Database=YouTubeV2;TrustServerCertificate=True"
  },
  "BlobStorageImagesConfig": {
    "UserAvatarsContainerName": "useravatars",
    "VideoThumbnailsContainerName": "videothumbnails"
  },
  "BlobStorageVideosConfig": {
    "VideosContainerName": "videos"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "JWTSettings": {
    "securityKey": "YouTubeV2SecretSecurityKey",
    "validIssuer": "YouTubeV2Api",
    "validAudience": "https://localhost:7133",
    "expiresInDays": 1
  },
  "AllowedHosts": "*"
}
